<%- include header%>

    <div class="col-xs-12 col-md-12 addShopAttr">
        <div class="col-md-12 nav">
            <a href="/shopManage">商品信息管理</a> >>
            <a href="/addShop">添加商品</a> >>
            <span>添加属性</span>
        </div>

        <div class="col-xs-12 col-md-4"></div>
        <div class="col-xs-12 col-md-8 formAdd">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">属性名: </label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="name" placeholder="属性名" autofocus="true">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">属性值: </label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="value" placeholder="属性值">
                    </div>
                </div>
                <div class="row">
                    <div class="rol-xs-3 rol-md-12">
                        <button type="submit" class="btn btn-primary">保存</button>
                        <button type="reset" class="btn btn-primary">取消</button>
                    </div>

                </div>
            </form>
        </div>
    </div>

<%- include footer%>